-- [[ NOTICAX - PREMIUM MAINTENANCE MODE ]] --

local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local RunService = game:GetService("RunService")
local StarterGui = game:GetService("StarterGui")
local Lighting = game:GetService("Lighting")

-- Configuração da Música (Lo-fi Chill)
local MUSIC_ID = "rbxassetid://1848354536" 

-- 1. Notificação de Sistema
pcall(function()
    StarterGui:SetCore("SendNotification", {
        Title = "Noticax System";
        Text = "Conexão pausada para manutenção.";
        Duration = 5;
    })
end)

-- 2. Construção da Interface (UI)
local ScreenGui = Instance.new("ScreenGui")
local Blur = Instance.new("BlurEffect")
local MainFrame = Instance.new("Frame")
local Shadow = Instance.new("ImageLabel") -- Sombra para dar profundidade
local Corner = Instance.new("UICorner")
local Stroke = Instance.new("UIStroke")
local Title = Instance.new("TextLabel")
local SubTitle = Instance.new("TextLabel")
local Description = Instance.new("TextLabel")
local LoadingCircle = Instance.new("ImageLabel")
local StatusText = Instance.new("TextLabel")
local Credit = Instance.new("TextLabel")

-- Proteção (Tenta CoreGui, senão PlayerGui)
local success, parent = pcall(function() return game:GetService("CoreGui") end)
if not success then parent = Players.LocalPlayer:WaitForChild("PlayerGui") end

ScreenGui.Name = "Noticax_Maintenance_Pro"
ScreenGui.Parent = parent
ScreenGui.IgnoreGuiInset = true -- Cobre a tela toda
ScreenGui.ResetOnSpawn = false

-- Áudio
local Sound = Instance.new("Sound")
Sound.Name = "MaintenanceMusic"
Sound.SoundId = MUSIC_ID
Sound.Volume = 0.8
Sound.Looped = true
Sound.Parent = ScreenGui
Sound.Playing = true

-- Efeito Blur (Desfoque no jogo)
Blur.Name = "MaintenanceBlur"
Blur.Parent = Lighting
Blur.Size = 24

-- Fundo Escuro (Overlay)
local Overlay = Instance.new("Frame", ScreenGui)
Overlay.Size = UDim2.new(1, 0, 1, 0)
Overlay.BackgroundColor3 = Color3.new(0, 0, 0)
Overlay.BackgroundTransparency = 0.3
Overlay.Active = true -- Bloqueia cliques

-- Janela Principal
MainFrame.Parent = ScreenGui
MainFrame.AnchorPoint = Vector2.new(0.5, 0.5)
MainFrame.Position = UDim2.new(0.5, 0, 0.5, 0)
MainFrame.Size = UDim2.new(0, 500, 0, 280)
-- Adapta para celular pequeno
if workspace.CurrentCamera.ViewportSize.X < 500 then
    MainFrame.Size = UDim2.new(0.9, 0, 0.4, 0)
end
MainFrame.BackgroundColor3 = Color3.fromRGB(18, 18, 22) -- Cinza bem escuro
MainFrame.BorderSizePixel = 0

-- Arredondamento
Corner.CornerRadius = UDim.new(0, 16)
Corner.Parent = MainFrame

-- Borda Neon Suave
Stroke.Color = Color3.fromRGB(60, 60, 70)
Stroke.Thickness = 1.5
Stroke.Parent = MainFrame

-- Título Principal
Title.Parent = MainFrame
Title.BackgroundTransparency = 1
Title.Position = UDim2.new(0, 0, 0.12, 0)
Title.Size = UDim2.new(1, 0, 0.15, 0)
Title.Font = Enum.Font.GothamBlack
Title.Text = "MANUTENÇÃO DE SISTEMA"
Title.TextColor3 = Color3.fromRGB(255, 60, 60) -- Vermelho Alerta Suave
Title.TextSize = 26

-- Subtítulo
SubTitle.Parent = MainFrame
SubTitle.BackgroundTransparency = 1
SubTitle.Position = UDim2.new(0, 0, 0.28, 0)
SubTitle.Size = UDim2.new(1, 0, 0.1, 0)
SubTitle.Font = Enum.Font.GothamBold
SubTitle.Text = "ATUALIZAÇÃO & CORREÇÃO DE BUGS"
SubTitle.TextColor3 = Color3.fromRGB(200, 200, 200)
SubTitle.TextSize = 14

-- Descrição Detalhada
Description.Parent = MainFrame
Description.BackgroundTransparency = 1
Description.Position = UDim2.new(0.1, 0, 0.45, 0)
Description.Size = UDim2.new(0.8, 0, 0.2, 0)
Description.Font = Enum.Font.Gotham
Description.Text = "Os desenvolvedores estão aplicando correções importantes no código para garantir a estabilidade do Noticax v1.\nPor favor, aguarde a nova versão."
Description.TextColor3 = Color3.fromRGB(160, 160, 160)
Description.TextSize = 15
Description.TextWrapped = true

-- Ícone de Carregamento (Loading Spinner)
LoadingCircle.Parent = MainFrame
LoadingCircle.BackgroundTransparency = 1
LoadingCircle.Position = UDim2.new(0.5, -15, 0.75, 0)
LoadingCircle.Size = UDim2.new(0, 30, 0, 30)
LoadingCircle.Image = "rbxassetid://3570695787" -- Ícone circular padrão
LoadingCircle.ImageColor3 = Color3.fromRGB(255, 60, 60)

-- Status Piscando
StatusText.Parent = MainFrame
StatusText.BackgroundTransparency = 1
StatusText.Position = UDim2.new(0, 0, 0.88, 0)
StatusText.Size = UDim2.new(1, 0, 0.1, 0)
StatusText.Font = Enum.Font.SourceSansBold
StatusText.Text = "Status: Trabalhando nos arquivos..."
StatusText.TextColor3 = Color3.fromRGB(100, 100, 100)
StatusText.TextSize = 14

-- [[ ANIMAÇÕES (A Alma do Negócio) ]] --

-- 1. Animação de Rotação do Loading (Gira para sempre)
local TweenInfoRotate = TweenInfo.new(1, Enum.EasingStyle.Linear, Enum.EasingDirection.InOut, -1)
local RotateTween = TweenService:Create(LoadingCircle, TweenInfoRotate, {Rotation = 360})
RotateTween:Play()

-- 2. Animação de "Respiração" do Título (Pulse)
local TweenInfoPulse = TweenInfo.new(1.5, Enum.EasingStyle.Sine, Enum.EasingDirection.InOut, -1, true)
local PulseTween = TweenService:Create(Title, TweenInfoPulse, {TextTransparency = 0.3})
PulseTween:Play()

-- 3. Animação de Entrada (Fade In)
MainFrame.BackgroundTransparency = 1
Description.TextTransparency = 1
Title.TextTransparency = 1
SubTitle.TextTransparency = 1

local FadeInInfo = TweenInfo.new(1, Enum.EasingStyle.Quad, Enum.EasingDirection.Out)
TweenService:Create(MainFrame, FadeInInfo, {BackgroundTransparency = 0}):Play()
wait(0.2)
TweenService:Create(Title, FadeInInfo, {TextTransparency = 0}):Play()
wait(0.1)
TweenService:Create(SubTitle, FadeInInfo, {TextTransparency = 0}):Play()
wait(0.1)
TweenService:Create(Description, FadeInInfo, {TextTransparency = 0}):Play()

-- Bloqueia o carregamento do restante do script
return

