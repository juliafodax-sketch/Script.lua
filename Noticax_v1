-- [[ NOTICAX ULTIMATE RGB MAINTENANCE ]] --

local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local RunService = game:GetService("RunService")
local StarterGui = game:GetService("StarterGui")
local Lighting = game:GetService("Lighting")

-- [[ CONFIGURAÇÕES ]] --
local TEMPO_HORAS = 24 -- Tempo total
local MUSIC_ID = "rbxassetid://6802556937" -- Música Chill/Vibe (Pode trocar se quiser)

-- 1. Notificação Inicial
pcall(function()
    StarterGui:SetCore("SendNotification", {
        Title = "Noticax System";
        Text = "Servidor em manutenção programada.";
        Duration = 8;
    })
end)

-- 2. Construção da Interface (UI Premium)
local ScreenGui = Instance.new("ScreenGui")
local Blur = Instance.new("BlurEffect")
local MainFrame = Instance.new("Frame")
local Corner = Instance.new("UICorner")
local Stroke = Instance.new("UIStroke")
local Title = Instance.new("TextLabel")
local SubTitleNewFeature = Instance.new("TextLabel") -- Aviso da novidade
local Description = Instance.new("TextLabel")
local TimerLabel = Instance.new("TextLabel") -- O Timer RGB
local LoadingIcon = Instance.new("ImageLabel")
local Footer = Instance.new("TextLabel")

-- Tenta CoreGui (Mais seguro), senão usa PlayerGui
local success, parent = pcall(function() return game:GetService("CoreGui") end)
if not success then parent = Players.LocalPlayer:WaitForChild("PlayerGui") end

ScreenGui.Name = "Noticax_RGB_Maint"
ScreenGui.Parent = parent
ScreenGui.IgnoreGuiInset = true
ScreenGui.ResetOnSpawn = false

-- Configuração de Áudio
local Sound = Instance.new("Sound")
Sound.SoundId = MUSIC_ID
Sound.Volume = 1.5
Sound.Looped = true
Sound.Parent = ScreenGui
Sound.Playing = true

-- Configuração Visual (Blur e Fundo Escuro)
Blur.Name = "MaintBlur"
Blur.Parent = Lighting
Blur.Size = 25

local Overlay = Instance.new("Frame", ScreenGui)
Overlay.Size = UDim2.new(1, 0, 1, 0)
Overlay.BackgroundColor3 = Color3.new(0, 0, 0)
Overlay.BackgroundTransparency = 0.25
Overlay.Active = true

-- Janela Principal
MainFrame.Parent = ScreenGui
MainFrame.AnchorPoint = Vector2.new(0.5, 0.5)
MainFrame.Position = UDim2.new(0.5, 0, 0.5, 0)
MainFrame.Size = UDim2.new(0, 550, 0, 350)
-- Ajuste para celulares pequenos
if workspace.CurrentCamera.ViewportSize.X < 550 then
    MainFrame.Size = UDim2.new(0.9, 0, 0.5, 0)
end
MainFrame.BackgroundColor3 = Color3.fromRGB(20, 20, 25)
MainFrame.BorderSizePixel = 0

Corner.CornerRadius = UDim.new(0, 16)
Corner.Parent = MainFrame

-- Borda Neon Azulada
Stroke.Color = Color3.fromRGB(80, 120, 255)
Stroke.Thickness = 2
Stroke.Transparency = 0.5
Stroke.Parent = MainFrame

-- Título
Title.Parent = MainFrame
Title.BackgroundTransparency = 1
Title.Position = UDim2.new(0, 0, 0.08, 0)
Title.Size = UDim2.new(1, 0, 0.15, 0)
Title.Font = Enum.Font.GothamBlack
Title.Text = "MANUTENÇÃO GERAL"
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.TextSize = 28

-- Subtítulo (O HYPE DA NOVA OPÇÃO)
SubTitleNewFeature.Parent = MainFrame
SubTitleNewFeature.BackgroundTransparency = 1
SubTitleNewFeature.Position = UDim2.new(0, 0, 0.22, 0)
SubTitleNewFeature.Size = UDim2.new(1, 0, 0.1, 0)
SubTitleNewFeature.Font = Enum.Font.GothamBold
SubTitleNewFeature.Text = "✨ PREPARANDO UMA NOVA OPÇÃO SECRETA... ✨"
SubTitleNewFeature.TextColor3 = Color3.fromRGB(255, 220, 50) -- Amarelo Ouro
SubTitleNewFeature.TextSize = 16

-- Descrição
Description.Parent = MainFrame
Description.BackgroundTransparency = 1
Description.Position = UDim2.new(0.1, 0, 0.38, 0)
Description.Size = UDim2.new(0.8, 0, 0.2, 0)
Description.Font = Enum.Font.GothamMedium
Description.Text = "Estamos atualizando os servidores e implementando uma função muito pedida. O Noticax v3 voltará ainda mais forte."
Description.TextColor3 = Color3.fromRGB(180, 180, 180)
Description.TextSize = 15
Description.TextWrapped = true

-- O TIMER RGB (O destaque)
TimerLabel.Parent = MainFrame
TimerLabel.BackgroundTransparency = 1
TimerLabel.Position = UDim2.new(0, 0, 0.6, 0)
TimerLabel.Size = UDim2.new(1, 0, 0.15, 0)
TimerLabel.Font = Enum.Font.GothamBlack
TimerLabel.Text = "24:00:00"
TimerLabel.TextColor3 = Color3.new(1, 1, 1) -- Começa branco, o script muda depois
TimerLabel.TextSize = 48

-- Ícone de Carregamento
LoadingIcon.Parent = MainFrame
LoadingIcon.BackgroundTransparency = 1
LoadingCircle.Position = UDim2.new(0.5, -20, 0.8, 0)
LoadingIcon.Size = UDim2.new(0, 40, 0, 40)
LoadingIcon.Image = "rbxassetid://3570695787" -- Ícone circular
LoadingIcon.ImageColor3 = Color3.fromRGB(80, 120, 255)

-- Footer
Footer.Parent = MainFrame
Footer.BackgroundTransparency = 1
Footer.Position = UDim2.new(0, 0, 0.92, 0)
Footer.Size = UDim2.new(1, 0, 0.05, 0)
Footer.Font = Enum.Font.SourceSansBold
Footer.Text = "Noticax Development © 2024"
Footer.TextColor3 = Color3.fromRGB(100, 100, 100)
Footer.TextSize = 12

-- [[ ANIMAÇÕES E EFEITOS ]] --

-- 1. Animação do Ícone Girando
local SpinTween = TweenService:Create(LoadingIcon, TweenInfo.new(1.5, Enum.EasingStyle.Linear, Enum.EasingDirection.InOut, -1), {Rotation = 360})
SpinTween:Play()

-- 2. Animação de "Respiração" no Subtítulo da Novidade
local PulseTween = TweenService:Create(SubTitleNewFeature, TweenInfo.new(1, Enum.EasingStyle.Sine, Enum.EasingDirection.InOut, -1, true), {TextTransparency = 0.4})
PulseTween:Play()

-- 3. EFEITO RGB NO TIMER (Chroma Loop)
local hue = 0
RunService.Heartbeat:Connect(function()
    hue = hue + 0.001 -- Velocidade da mudança de cor
    if hue > 1 then hue = 0 end
    TimerLabel.TextColor3 = Color3.fromHSV(hue, 0.8, 1) -- Converte para RGB vibrante
end)

-- 4. Lógica do Cronômetro (24 Horas)
local TotalSeconds = TEMPO_HORAS * 3600

spawn(function()
    while TotalSeconds > 0 do
        TotalSeconds = TotalSeconds - 1
        local h = math.floor(TotalSeconds / 3600)
        local m = math.floor((TotalSeconds % 3600) / 60)
        local s = TotalSeconds % 60
        
        TimerLabel.Text = string.format("%02d:%02d:%02d", h, m, s)
        wait(1)
    end
    TimerLabel.Text = "A NOVA ERA CHEGOU. REINICIE."
end)

-- IMPORTANTE: Bloqueia o resto do script
return

