-- [[ NOTICAX v4 - MANUTENÇÃO FORÇADA ]] --
print(">> INICIANDO TELA DE MANUTENÇÃO NOTICAX v4 <<")

local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local Lighting = game:GetService("Lighting")
local StarterGui = game:GetService("StarterGui")

local LocalPlayer = Players.LocalPlayer
local PlayerGui = LocalPlayer:WaitForChild("PlayerGui")

-- [[ CONFIGURAÇÕES ]] --
local TEMPO_HORAS = 24
local MUSIC_ID = "rbxassetid://1837126786" -- Lo-fi

-- 1. Remove qualquer tela antiga para não duplicar
for _, oldGui in pairs(PlayerGui:GetChildren()) do
    if oldGui.Name == "Noticax_v4_Maintenance" then
        oldGui:Destroy()
    end
end

-- 2. Criação da Interface
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "Noticax_v4_Maintenance"
ScreenGui.Parent = PlayerGui -- Forçando no PlayerGui pra aparecer 100%
ScreenGui.IgnoreGuiInset = true
ScreenGui.ResetOnSpawn = false
print(">> GUI CRIADA COM SUCESSO <<")

-- Efeitos Visuais
local Blur = Instance.new("BlurEffect")
Blur.Name = "NoticaxBlur"
Blur.Size = 24
Blur.Parent = Lighting

-- Som
local Sound = Instance.new("Sound")
Sound.SoundId = MUSIC_ID
Sound.Volume = 2
Sound.Looped = true
Sound.Parent = ScreenGui
if not Sound.IsLoaded then Sound.Loaded:Wait() end
Sound:Play()

-- Fundo Escuro
local Overlay = Instance.new("Frame")
Overlay.Parent = ScreenGui
Overlay.Size = UDim2.new(1, 0, 1, 0)
Overlay.BackgroundColor3 = Color3.new(0,0,0)
Overlay.BackgroundTransparency = 0.3

-- Janela Principal
local MainFrame = Instance.new("Frame")
MainFrame.Parent = ScreenGui
MainFrame.AnchorPoint = Vector2.new(0.5, 0.5)
MainFrame.Position = UDim2.new(0.5, 0, 0.5, 0)
MainFrame.Size = UDim2.new(0, 500, 0, 320)
-- Ajuste para celular
if workspace.CurrentCamera.ViewportSize.X < 500 then
    MainFrame.Size = UDim2.new(0.9, 0, 0.5, 0)
end
MainFrame.BackgroundColor3 = Color3.fromRGB(15, 15, 20)
MainFrame.BorderSizePixel = 0

-- Borda e Arredondamento
local Corner = Instance.new("UICorner")
Corner.CornerRadius = UDim.new(0, 15)
Corner.Parent = MainFrame

local Stroke = Instance.new("UIStroke")
Stroke.Thickness = 2.5
Stroke.Parent = MainFrame

-- Textos
local Title = Instance.new("TextLabel")
Title.Parent = MainFrame
Title.BackgroundTransparency = 1
Title.Position = UDim2.new(0, 0, 0.05, 0)
Title.Size = UDim2.new(1, 0, 0.2, 0)
Title.Font = Enum.Font.GothamBlack
Title.Text = "MANUTENÇÃO v4"
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.TextSize = 28

local SubTitle = Instance.new("TextLabel")
SubTitle.Parent = MainFrame
SubTitle.BackgroundTransparency = 1
SubTitle.Position = UDim2.new(0, 0, 0.22, 0)
SubTitle.Size = UDim2.new(1, 0, 0.1, 0)
SubTitle.Font = Enum.Font.GothamBold
SubTitle.Text = "✨ CRIANDO NOVA OPÇÃO SECRETA ✨"
SubTitle.TextColor3 = Color3.fromRGB(255, 200, 50)
SubTitle.TextSize = 14

local Description = Instance.new("TextLabel")
Description.Parent = MainFrame
Description.BackgroundTransparency = 1
Description.Position = UDim2.new(0.1, 0, 0.35, 0)
Description.Size = UDim2.new(0.8, 0, 0.2, 0)
Description.Font = Enum.Font.GothamMedium
Description.Text = "O servidor foi fechado temporariamente para a implementação de recursos exclusivos. Aguarde o retorno."
Description.TextColor3 = Color3.fromRGB(180, 180, 180)
Description.TextSize = 14
Description.TextWrapped = true

local TimerLabel = Instance.new("TextLabel")
TimerLabel.Parent = MainFrame
TimerLabel.BackgroundTransparency = 1
TimerLabel.Position = UDim2.new(0, 0, 0.55, 0)
TimerLabel.Size = UDim2.new(1, 0, 0.2, 0)
TimerLabel.Font = Enum.Font.GothamBlack
TimerLabel.Text = "24:00:00"
TimerLabel.TextColor3 = Color3.new(1,1,1)
TimerLabel.TextSize = 42

-- Ícone Carregando
local LoadingIcon = Instance.new("ImageLabel")
LoadingIcon.Parent = MainFrame
LoadingIcon.BackgroundTransparency = 1
LoadingIcon.Position = UDim2.new(0.5, -20, 0.8, 0)
LoadingIcon.Size = UDim2.new(0, 40, 0, 40)
LoadingIcon.Image = "rbxassetid://3570695787"
LoadingIcon.ImageColor3 = Color3.new(1,1,1)

-- [[ ANIMAÇÕES ]] --
TweenService:Create(LoadingIcon, TweenInfo.new(1, Enum.EasingStyle.Linear, Enum.EasingDirection.InOut, -1), {Rotation = 360}):Play()

-- Loop RGB e Tempo
task.spawn(function()
    local hue = 0
    local TotalSeconds = TEMPO_HORAS * 3600
    
    while true do
        -- RGB
        hue = hue + 0.005
        if hue > 1 then hue = 0 end
        local color = Color3.fromHSV(hue, 0.8, 1)
        
        Stroke.Color = color
        TimerLabel.TextColor3 = color
        LoadingIcon.ImageColor3 = color
        
        -- Tempo
        if TotalSeconds > 0 then
            TotalSeconds = TotalSeconds - 0.03 -- Ajuste para o wait rápido
            local h = math.floor(TotalSeconds / 3600)
            local m = math.floor((TotalSeconds % 3600) / 60)
            local s = math.floor(TotalSeconds % 60)
            TimerLabel.Text = string.format("%02d:%02d:%02d", h, m, s)
        else
            TimerLabel.Text = "ONLINE"
        end
        
        task.wait(0.03)
    end
end)

print(">> SCRIPT DE MANUTENÇÃO CARREGADO 100% <<")

-- BLOQUEIA O RESTO DO SCRIPT (Para garantir que só fique a manutenção)
return 
