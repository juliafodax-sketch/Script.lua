-- [[ SISTEMA DE MANUTENÇÃO NOTICAX - 7 HORAS ]] --

local StarterGui = game:GetService("StarterGui")
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")

-- 1. Notificação de Alerta
pcall(function()
    StarterGui:SetCore("SendNotification", {
        Title = "Noticax v1";
        Text = "Script em manutenção temporária.";
        Duration = 10;
    })
end)

-- 2. Criar Tela de Bloqueio
local ScreenGui = Instance.new("ScreenGui")
local MainFrame = Instance.new("Frame")
local Title = Instance.new("TextLabel")
local Description = Instance.new("TextLabel")
local TimerLabel = Instance.new("TextLabel")
local CreditLabel = Instance.new("TextLabel")

-- Tenta proteger na CoreGui (se o executor permitir), senão usa PlayerGui
local success, parent = pcall(function() return game:GetService("CoreGui") end)
if not success then parent = Players.LocalPlayer:WaitForChild("PlayerGui") end
ScreenGui.Parent = parent
ScreenGui.Name = "NoticaxMaintenance"
ScreenGui.IgnoreGuiInset = true -- Cobre a tela toda (até a barra superior)

-- Fundo Preto
MainFrame.Parent = ScreenGui
MainFrame.BackgroundColor3 = Color3.fromRGB(10, 10, 10)
MainFrame.Size = UDim2.new(1, 0, 1, 0)
MainFrame.Active = true -- Impede clicar no jogo

-- Título
Title.Parent = MainFrame
Title.BackgroundTransparency = 1
Title.Position = UDim2.new(0, 0, 0.2, 0)
Title.Size = UDim2.new(1, 0, 0.1, 0)
Title.Font = Enum.Font.GothamBold
Title.Text = "⚠️ MANUTENÇÃO NOTICAX ⚠️"
Title.TextColor3 = Color3.fromRGB(255, 60, 60) -- Vermelho
Title.TextSize = 32

-- Explicação (O motivo que você pediu)
Description.Parent = MainFrame
Description.BackgroundTransparency = 1
Description.Position = UDim2.new(0.1, 0, 0.35, 0)
Description.Size = UDim2.new(0.8, 0, 0.2, 0)
Description.Font = Enum.Font.Gotham
Description.TextColor3 = Color3.fromRGB(200, 200, 200)
Description.TextSize = 18
Description.TextWrapped = true
Description.Text = "Estamos atualizando o sistema para corrigir bugs e adicionar novas funções.\n\nO script foi bloqueado temporariamente para sua segurança.\nPor favor, aguarde o tempo restante."

-- Cronômetro (Time de 7 Horas)
TimerLabel.Parent = MainFrame
TimerLabel.BackgroundTransparency = 1
TimerLabel.Position = UDim2.new(0, 0, 0.6, 0)
TimerLabel.Size = UDim2.new(1, 0, 0.1, 0)
TimerLabel.Font = Enum.Font.GothamBlack
TimerLabel.TextColor3 = Color3.fromRGB(255, 170, 0) -- Laranja
TimerLabel.TextSize = 40
TimerLabel.Text = "07:00:00"

CreditLabel.Parent = MainFrame
CreditLabel.BackgroundTransparency = 1
CreditLabel.Position = UDim2.new(0, 0, 0.9, 0)
CreditLabel.Size = UDim2.new(1, 0, 0.05, 0)
CreditLabel.Font = Enum.Font.Gotham
CreditLabel.TextColor3 = Color3.fromRGB(100, 100, 100)
CreditLabel.TextSize = 14
CreditLabel.Text = "Equipe Noticax Dev"

-- 3. Lógica do Tempo (7 Horas)
local TotalSeconds = 7 * 3600 -- 7 horas em segundos

spawn(function()
    while TotalSeconds > 0 do
        TotalSeconds = TotalSeconds - 1
        
        -- Formata o tempo para HH:MM:SS
        local hours = math.floor(TotalSeconds / 3600)
        local minutes = math.floor((TotalSeconds % 3600) / 60)
        local seconds = TotalSeconds % 60
        
        TimerLabel.Text = string.format("VOLTAMOS EM: %02d:%02d:%02d", hours, minutes, seconds)
        
        wait(1)
    end
    TimerLabel.Text = "ATUALIZAÇÃO CONCLUÍDA! TENTE REINICIAR."
    TimerLabel.TextColor3 = Color3.fromRGB(0, 255, 0)
end)

-- Bloqueia o resto do script
return

